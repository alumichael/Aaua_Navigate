<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context="com.example.mike4christ.aaua_navigate.About">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_height="0dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:contentDescription="mylogo"
        android:src="@drawable/gdglogo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AAUA NAVIGATION SYSTEM"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:id="@+id/nav_sys"
        android:layout_below="@+id/logo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This Mobile App is only Restricted to the Campus Environment !"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/inst"
        android:layout_below="@+id/nav_sys"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed By "
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/dev_by"
        android:layout_below="@+id/inst"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GDG AKOKO"
        android:textAlignment="center"
        android:id="@+id/gdg"
        android:textColor="@color/colorAccent"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_below="@+id/dev_by"
        android:fontFamily="casual"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:gravity="center"
        android:id="@+id/version"
        android:textAlignment="center"
        android:layout_below="@+id/gdg"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        />

        <TextView
            android:id="@+id/web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/version"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="For any Info, contact us: +2347069722188 \\ +2348106746804"
            android:textAlignment="center"
            android:textSize="15sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sit Back for More Innovations Coming !!"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/web"
        android:id="@+id/sit_back"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        />


    </RelativeLayout>
</LinearLayout>
